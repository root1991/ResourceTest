<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ImageView"/>

    <style name="ImageView.Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.FixedSize">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="ImageView.CenterCroped" parent="ImageView.FixedSize">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageView.Center" parent="ImageView.FixedSize">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>


</resources>
